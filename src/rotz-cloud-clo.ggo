args "--unamed-opts --no-handle-error --long-help -a rotz_args_info -f rotz_parser"
package "rotz-cloud"
usage "rotz-cloud [OPTIONS...]"
description "Show all tags along with a count."

option "database" -
	"Tagging service file or host, default: `rotz.tcb'"
	string typestr="FILE|HOST" optional

option "top" -
	"Only display the top N tags."
	int typestr="N" optional

option "pivot" -
	"Display tags that intersect with TAG."
	string typestr="TAG" optional
